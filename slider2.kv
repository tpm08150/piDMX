<FadersScreenA>:
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        size: root.width,  400


        Label:
            id: slider_label_red
            text: "Red"
            font_size: 40

        Slider:
            id: slider_red
            min: 0
            max: 255
            step: 1
            orientation: "vertical"
            on_value: root.slide_it_red(*args)
            value: 0
            value_track: True
            value_track_width: 6
            value_track_color: 'red'

        Label:
            id: slider_label_green
            text: "Green"
            font_size: 40

        Slider:
            id: slider_green
            min: 0
            max: 255
            step: 1
            #height: 300
            orientation: "vertical"
            on_value: root.slide_it_green(*args)
            value: 0
            value_track: True
            value_track_width: 6
            value_track_color: 'green'

        Label:
            id: slider_label_blue
            text: "Blue"
            font_size: 40

        Slider:
            id:slider_blue
            min: 0
            max: 255
            step: 1
            #height: 300
            orientation: "vertical"
            on_value: root.slide_it_blue(*args)
            value: 0
            value_track: True
            value_track_width: 6
            value_track_color: 'blue'

        Label:
            id: slider_label_TBD
            text: "4"
            font_size: 40

        Slider:
            min: 0
            max: 255
            step: 1
            #height: 300
            orientation: "vertical"
            on_value: root.slide_it_blue(*args)
            value_track: True
            value_track_width: 6
            value_track_color: 'blue'

    GridLayout:
        rows: 2
        cols: 4
        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
            text: 'Select Fixtures'
            on_release:
                root.manager.transition = FadeTransition(clearcolor=(0,0,0,0))
                root.manager.current = 'numbers'
        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
            text: 'Select Group'
        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
            text: 'Select Cues'
        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
            text: 'SuperCues'
        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
            text: 'Fader Group 1'
            background_color: 'red'

        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
            text: 'Fader Group 2'
            on_release:
                root.manager.transition = FadeTransition(clearcolor=(0,0,0,0))
                root.manager.current = 'fadersB'
        Button:
            size_hint: None, None
            size: dp(120), dp(60)
            pos_hint:{"center_y": .75, "left": 0}
